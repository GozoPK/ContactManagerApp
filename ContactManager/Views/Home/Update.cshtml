@model Contact

@{
    ViewData["Title"] = "Update Contact";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Update" method="post">
                <div class="form-group mb-2">
                    <label for="firstName">First Name:</label>
                    <input type="text" class="form-control" id="firstName" name="firstName" value="@Model.FirstName" />
                </div>
                <div class="form-group mb-2">
                    <label for="lastName">Last Name:</label>
                    <input type="text" class="form-control" id="lastName" name="lastName" value="@Model.LastName" />
                </div>
                <div class="form-group mb-2">
                    <label for="city">City:</label>
                    <input type="text" class="form-control" id="city" name="city" value="@Model.City" />
                </div>
                <div class="form-group mb-2">
                    <label for="prefecture">Prefecture:</label>
                    <input type="text" class="form-control" id="prefecture" name="prefecture" value="@Model.Prefecture" />
                </div>
                <div class="form-group mb-2">
                    <label for="postalCode">Postal Code:</label>
                    <input type="text" class="form-control" id="postalCode" name="postalCode" value="@Model.PostalCode" />
                </div>
                <div class="form-group mb-2">
                    <label for="dateOfBirth">Date of Birth:</label>
                    <input type="text" class="form-control" id="dateOfBirth" name="dateOfBirth" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" />
                </div>
                <div class="form-group mb-2">
                    <label for="mobileNumber">Mobile Number:</label>
                    <input type="text" class="form-control" id="mobileNumber" name="mobileNumber" value="@Model.MobileNumber" />
                </div>
                <div class="mb-2">
                    <button type="submit" style="width: 150px" class="btn btn-success me-2">Αποθήκευση</button>
                    <a type="button" style="width: 150px" class="btn btn-primary" asp-action="Index">Πίσω</a>
                </div>
            </form>
        </div>
    </div>
</div>

